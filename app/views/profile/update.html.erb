<h2 class="ui center aligned icon header">
  <div class="top-slogan-handler">
    <%= image_tag('edit.png', class:'top-slogan-image') %>
    <h1 class="slogan profile-slogan">Изменение профиля</h1>
  </div>
</h2>
<div class="center-my ">
<%= form_for :user do |f|  %>

  <div class="ui segment profile ">
    <%=render 'devise/shared/error_messages', resource: @user %>

    <div class="ui form ">
      <div class="avatar-handler">
        <% if @user.avatar.attached? %>
          <%=image_tag(@user.avatar, class: 'avatar')%>
        <% else %>
          <%= image_tag('profile.png', class: 'avatar') %>
        <% end %>
      </div>
      <div class="field">
        <%=f.label 'Загрузить фото', class:'ui secondary button pick-image-button' %>
        <label for="">
          <span style="display: none">
             <%=f.file_field 'Загрузить фото' %>
          </span>
        </label>
      </div>
      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: 'Email', class:'data-input'  %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.text_field :password, placeholder: 'Пароль', class:'data-input'  %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.text_field :password_confirmation, placeholder: 'Повторите пароль', class:'data-input'  %>
      </div>
      <%= f.submit "Изменить", class: 'ui button secondary'%>
    </div>
  </div>
<% end %>
</div>
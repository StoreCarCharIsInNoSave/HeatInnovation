<h2 class="ui center aligned icon header">
  <div class="top-slogan-handler">
    <%= image_tag('register.png', class:'top-slogan-image') %>
    <h1 class="slogan">Регистрация</h1>
  </div>
</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="ui segment ">
    <%= render 'devise/shared/error_messages', resource: @user %>

    <div class="ui form ">
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'data-input' %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password",class:'data-input'  %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:'data-input'  %>
      </div>
      <%= f.submit "Зарегистрироваться", class: 'ui button secondary' %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>

